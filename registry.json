{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "freee-starter",
  "homepage": "https://v0-freee-starter.vercel.app",
  "description": "freee design system registry",
  "items": [
    {
      "name": "theme",
      "type": "registry:theme",
      "description": "freee brand color theme",
      "cssVars": {
        "light": {
          "--background": "#ffffff",
          "--foreground": "#323232",
          "--card": "#ffffff",
          "--card-foreground": "#323232",
          "--popover": "#ffffff",
          "--popover-foreground": "#323232",
          "--primary": "#285ac8",
          "--primary-foreground": "#ffffff",
          "--secondary": "#f0eded",
          "--secondary-foreground": "#323232",
          "--muted": "#f7f5f5",
          "--muted-foreground": "#6e6b6b",
          "--accent": "#ebf3ff",
          "--accent-foreground": "#285ac8",
          "--destructive": "#dc1e32",
          "--border": "#e9e7e7",
          "--input": "#e9e7e7",
          "--ring": "#2864f0"
        }
      }
    },
    {
      "name": "hero-split",
      "type": "registry:block",
      "title": "Hero Split",
      "description": "Two-column hero with text and visual area (requires shadcn/ui button)",
      "registryDependencies": ["theme"],
      "files": [
        {
          "path": "registry/blocks/hero-split.tsx",
          "type": "registry:block",
          "target": "src/components/hero-split.tsx"
        }
      ]
    },
    {
      "name": "stats-bar",
      "type": "registry:block",
      "title": "Stats Bar",
      "description": "Three-column statistics display",
      "registryDependencies": ["theme"],
      "files": [
        {
          "path": "registry/blocks/stats-bar.tsx",
          "type": "registry:block",
          "target": "src/components/stats-bar.tsx"
        }
      ]
    },
    {
      "name": "card-grid",
      "type": "registry:block",
      "title": "Card Grid",
      "description": "Responsive card grid (1/2/3 columns) (requires shadcn/ui card)",
      "registryDependencies": ["theme"],
      "files": [
        {
          "path": "registry/blocks/card-grid.tsx",
          "type": "registry:block",
          "target": "src/components/card-grid.tsx"
        }
      ]
    },
    {
      "name": "split-section",
      "type": "registry:block",
      "title": "Split Section",
      "description": "Two-column text and media layout",
      "registryDependencies": ["theme"],
      "files": [
        {
          "path": "registry/blocks/split-section.tsx",
          "type": "registry:block",
          "target": "src/components/split-section.tsx"
        }
      ]
    },
    {
      "name": "cta-banner",
      "type": "registry:block",
      "title": "CTA Banner",
      "description": "Full-width call-to-action banner (requires shadcn/ui button)",
      "registryDependencies": ["theme"],
      "files": [
        {
          "path": "registry/blocks/cta-banner.tsx",
          "type": "registry:block",
          "target": "src/components/cta-banner.tsx"
        }
      ]
    },
    {
      "name": "form-layout",
      "type": "registry:block",
      "title": "Form Layout",
      "description": "Vertical form with labels, inputs, and textarea (requires shadcn/ui button, input, label)",
      "registryDependencies": ["theme"],
      "files": [
        {
          "path": "registry/blocks/form-layout.tsx",
          "type": "registry:block",
          "target": "src/components/form-layout.tsx"
        }
      ]
    }
  ]
}
